<p id="notice"><%= notice %></p>

<p>
  <b>Email:</b>
  <%= @screenshot.email %>
</p>

<p>
  <b>Delivered:</b>
  <%= @screenshot.status %>
</p>

<p>
  <b>Description:</b>
  <%= @screenshot.description %>
</p>

<p>
  <b>Url:</b>
  <%= @screenshot.url %>
</p>

<p><b>Sizes:</b></p>
<ul>
<% @screenshot.sizes.each do |size| %>
	<% if size.height %>
	<li><%= size.height %> x <%= size.width %> <% if size.file %><% end %></li>
	<% end %>
<% end %>
</ul>

<%= link_to 'Resend', run_screenshot_path(@screenshot, token: @screenshot.token, email: @screenshot.email) %> &#8226; 
<%= link_to 'Edit Details', edit_screenshot_path(@screenshot, token: @screenshot.token, email: @screenshot.email) %> &#8226; 
<%= link_to 'New', new_screenshot_path %>
